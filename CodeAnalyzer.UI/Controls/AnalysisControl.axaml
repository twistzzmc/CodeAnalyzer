<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CodeAnalyzer.UI.Controls.AnalysisControl">
    <StackPanel Spacing="10">
        <Button x:Name="AnalyzeLoadedFiles"
                Content="Parsuj wczytane pliki"
                Background="LightBlue"
                Click="AnalyzeLoadedFiles_OnClick" />

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button x:Name="AnalyzeTooLongMethods"
                    Content="Szukaj zbyt skomplikowanych metod"
                    Background="LightGreen"
                    Click="AnalyzeTooLongMethods_OnClick" />

            <Button x:Name="AnalyzeGodObjects"
                    Content="Szukaj obiektów &quot;Bóg&quot;"
                    Background="LightGreen"
                    Click="AnalyzeGodObjects_OnClick" />
        </StackPanel>
    </StackPanel>
</UserControl>
